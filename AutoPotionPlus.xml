<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Frame name="AutoPotionPlusFrame" parent="UIParent" movable="true" enableMouse="true" hidden="true" inherits="BackdropTemplate">
        <Size x="400" y="350"/>
        <Anchors>
            <Anchor point="CENTER">
                <Offset x="0" y="0"/>
            </Anchor>
        </Anchors>
        <KeyValues>
            <KeyValue key="backdropInfo" value="BACKDROP_DIALOG_32_32" type="global"/>
        </KeyValues>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="8" y="-8"/>
                        <Anchor point="BOTTOMRIGHT" x="-8" y="8"/>
                    </Anchors>
                    <Color r="0" g="0" b="0" a="0.8"/>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <!-- Remove all old border textures -->
            </Layer>
            <Layer level="ARTWORK">
                <Texture file="Interface\DialogFrame\UI-DialogBox-Header">
                    <Size x="320" y="64"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="12"/>
                    </Anchors>
                </Texture>
                <FontString name="AutoPotionPlusTitle" inherits="GameFontNormalLarge" text="AutoPotion+">
                    <Size x="180" y="16"/>
                    <Anchors>
                        <Anchor point="TOP" y="0"/>
                    </Anchors>
                    <Color r="1" g="0.82" b="0"/>
                </FontString>
                <FontString name="$parentLowestTitle" inherits="GameFontNormal" text="Use Lowest Quality First">
                    <Anchors>
                        <Anchor point="TOP" y="-50"/>
                    </Anchors>
                    <Color r="1" g="0.82" b="0"/>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-5" y="-5"/>
                </Anchors>
            </Button>

            <!-- Healing Section -->
            <Frame name="$parentHealingSection">
                <Size x="63" y="90"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-70"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture name="$parentIcon" file="Interface\Icons\INV_Potion_54">
                            <Size x="32" y="32"/>
                            <Anchors>
                                <Anchor point="TOP" y="0"/>
                            </Anchors>
                        </Texture>
                        <FontString name="$parentLabel" inherits="GameFontNormalSmall" text="Healing">
                            <Anchors>
                                <Anchor point="TOP" y="-35"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <CheckButton name="$parentLowestCheck" inherits="UICheckButtonTemplate">
                        <Anchors>
                            <Anchor point="TOP" y="-55"/>
                        </Anchors>
                    </CheckButton>
                </Frames>
            </Frame>

            <!-- Mana Section -->
            <Frame name="$parentManaSection">
                <Size x="63" y="90"/>
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentHealingSection" x="10"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture name="$parentIcon" file="Interface\Icons\INV_Potion_76">
                            <Size x="32" y="32"/>
                            <Anchors>
                                <Anchor point="TOP" y="0"/>
                            </Anchors>
                        </Texture>
                        <FontString name="$parentLabel" inherits="GameFontNormalSmall" text="Mana">
                            <Anchors>
                                <Anchor point="TOP" y="-35"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <CheckButton name="$parentLowestCheck" inherits="UICheckButtonTemplate">
                        <Anchors>
                            <Anchor point="TOP" y="-55"/>
                        </Anchors>
                    </CheckButton>
                </Frames>
            </Frame>

            <!-- Food Section -->
            <Frame name="$parentFoodSection">
                <Size x="63" y="90"/>
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentManaSection" x="10"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture name="$parentIcon" file="Interface\Icons\INV_Misc_Food_23">
                            <Size x="32" y="32"/>
                            <Anchors>
                                <Anchor point="TOP" y="0"/>
                            </Anchors>
                        </Texture>
                        <FontString name="$parentLabel" inherits="GameFontNormalSmall" text="Food">
                            <Anchors>
                                <Anchor point="TOP" y="-35"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <CheckButton name="$parentLowestCheck" inherits="UICheckButtonTemplate">
                        <Anchors>
                            <Anchor point="TOP" y="-55"/>
                        </Anchors>
                    </CheckButton>
                </Frames>
            </Frame>

            <!-- Drink Section -->
            <Frame name="$parentDrinkSection">
                <Size x="63" y="90"/>
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentFoodSection" x="10"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture name="$parentIcon" file="Interface\Icons\INV_Drink_07">
                            <Size x="32" y="32"/>
                            <Anchors>
                                <Anchor point="TOP" y="0"/>
                            </Anchors>
                        </Texture>
                        <FontString name="$parentLabel" inherits="GameFontNormalSmall" text="Drink">
                            <Anchors>
                                <Anchor point="TOP" y="-35"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <CheckButton name="$parentLowestCheck" inherits="UICheckButtonTemplate">
                        <Anchors>
                            <Anchor point="TOP" y="-55"/>
                        </Anchors>
                    </CheckButton>
                </Frames>
            </Frame>

            <!-- Bandage Section - Make it wider -->
            <Frame name="$parentBandageSection">
                <Size x="63" y="90"/>
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentDrinkSection" x="10"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture name="$parentIcon" file="Interface\Icons\INV_Misc_Bandage_12">
                            <Size x="32" y="32"/>
                            <Anchors>
                                <Anchor point="TOP" y="0"/>
                            </Anchors>
                        </Texture>
                        <FontString name="$parentLabel" inherits="GameFontNormalSmall" text="Bandage">
                            <Anchors>
                                <Anchor point="TOP" y="-35"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <CheckButton name="$parentLowestCheck" inherits="UICheckButtonTemplate">
                        <Anchors>
                            <Anchor point="TOP" y="-55"/>
                        </Anchors>
                    </CheckButton>
                </Frames>
            </Frame>

            <!-- Warrior Mode at the bottom -->
            <CheckButton name="$parentWarriorModeCheck" inherits="UICheckButtonTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="40" y="-180"/>
                </Anchors>
            </CheckButton>

            <!-- Healthstone Priority Checkbox -->
            <Frame name="$parentHealthstoneSection">
                <Size x="300" y="30"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-210"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture name="$parentIcon" file="Interface\Icons\INV_Stone_04">
                            <Size x="16" y="16"/>
                            <Anchors>
                                <Anchor point="LEFT" x="0" y="0"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <Frames>
                    <CheckButton name="$parentLowestCheck" inherits="UICheckButtonTemplate">
                        <Anchors>
                            <Anchor point="LEFT" x="20" y="0"/>
                        </Anchors>
                    </CheckButton>
                </Frames>
            </Frame>

            <!-- Amount Priority Checkbox -->
            <Frame name="$parentAmountPrioritySection">
                <Size x="300" y="30"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-240"/>
                </Anchors>
                <Frames>
                    <CheckButton name="$parentLowestCheck" inherits="UICheckButtonTemplate">
                        <Anchors>
                            <Anchor point="LEFT" x="20" y="0"/>
                        </Anchors>
                    </CheckButton>
                </Frames>
            </Frame>

            <!-- Conjured Preference Checkbox -->
            <Frame name="$parentConjuredPreferenceSection">
                <Size x="300" y="30"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-270"/>
                </Anchors>
                <Frames>
                    <CheckButton name="$parentLowestCheck" inherits="UICheckButtonTemplate">
                        <Anchors>
                            <Anchor point="LEFT" x="20" y="0"/>
                        </Anchors>
                    </CheckButton>
                </Frames>
            </Frame>

            <!-- Add this button to the main frame -->
            <Button name="$parentManageItemsButton" inherits="UIPanelButtonTemplate" text="Manage Items">
                <Size x="100" y="22"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" x="-10" y="10"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        if AutoPotionPlusItemListManager:IsShown() then
                            AutoPotionPlusItemListManager:Hide()
                        else
                            AutoPotionPlusItemListManager:Show()
                        end
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
        <Scripts>
            <OnMouseDown>
                self:StartMoving()
            </OnMouseDown>
            <OnMouseUp>
                self:StopMovingOrSizing()
            </OnMouseUp>
        </Scripts>
    </Frame>

    <!-- Add the ItemListManager as a separate top-level frame -->
    <Frame name="AutoPotionPlusItemListManager" parent="UIParent" movable="true" enableMouse="true" hidden="true" inherits="BackdropTemplate">
        <Size x="450" y="400"/>
        <Anchors>
            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="AutoPotionPlusFrame" x="10" y="0"/>
        </Anchors>
        <KeyValues>
            <KeyValue key="backdropInfo" value="BACKDROP_DIALOG_32_32" type="global"/>
        </KeyValues>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="8" y="-8"/>
                        <Anchor point="BOTTOMRIGHT" x="-8" y="8"/>
                    </Anchors>
                    <Color r="0" g="0" b="0" a="0.8"/>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <!-- Remove all old border textures -->
            </Layer>
            <Layer level="ARTWORK">
                <Texture file="Interface\DialogFrame\UI-DialogBox-Header">
                    <Size x="320" y="64"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="12"/>
                    </Anchors>
                </Texture>
                <FontString name="$parentTitle" inherits="GameFontNormalLarge" text="Item List Manager">
                    <Anchors>
                        <Anchor point="TOP" y="0"/>
                    </Anchors>
                    <Color r="1" g="0.82" b="0"/>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-5" y="-5"/>
                </Anchors>
            </Button>
            
            <Frame name="$parentCategoryList">
                <Size x="150" y="240"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-40"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString name="$parentTitle" inherits="GameFontNormalLarge" text="Categories">
                            <Anchors>
                                <Anchor point="TOPLEFT" y="0"/>
                            </Anchors>
                            <Color r="1" g="0.82" b="0"/>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
            
            <ScrollFrame name="$parentItemListScroll" inherits="UIPanelScrollFrameTemplate">
                <Size x="200" y="240"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parentCategoryList" x="10" y="0"/>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture>
                            <Anchors>
                                <Anchor point="TOPLEFT" x="8" y="-8"/>
                                <Anchor point="BOTTOMRIGHT" x="-8" y="8"/>
                            </Anchors>
                            <Color r="0" g="0" b="0" a="0.3"/>
                        </Texture>
                    </Layer>
                </Layers>
                <ScrollChild>
                    <Frame name="$parentItemListScrollChild">
                        <Size x="200" y="240"/>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
            
            <Frame name="$parentDropZone">
                <Size x="360" y="60"/>
                <Anchors>
                    <Anchor point="BOTTOM" y="40"/>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture setAllPoints="true">
                            <Color r="0" g="0" b="0" a="0.3"/>
                        </Texture>
                    </Layer>
                    <Layer level="ARTWORK">
                        <FontString name="$parentText" inherits="GameFontNormalLarge" text="Drop items here to add them">
                            <Anchors>
                                <Anchor point="CENTER" x="0" y="10"/>
                            </Anchors>
                            <Color r="1" g="0.82" b="0"/>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <!-- Add this inside the AutoPotionPlusItemListManager frame, just above the DropZone -->
            <Button name="$parentResetButton" inherits="UIPanelButtonTemplate" text="Reset to Defaults">
                <Size x="120" y="22"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="10" y="10"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        ResetAllSettings()
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
        <Scripts>
            <OnMouseDown>
                self:StartMoving()
            </OnMouseDown>
            <OnMouseUp>
                self:StopMovingOrSizing()
            </OnMouseUp>
        </Scripts>
    </Frame>

    <!-- Add the Debug Log UI as a separate top-level frame -->
    <Frame name="AutoPotionPlusDebugLogFrame" parent="UIParent" movable="true" enableMouse="true" hidden="true" inherits="BackdropTemplate">
        <Size x="600" y="400"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <KeyValues>
            <KeyValue key="backdropInfo" value="BACKDROP_DIALOG_32_32" type="global"/>
        </KeyValues>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="8" y="-8"/>
                        <Anchor point="BOTTOMRIGHT" x="-8" y="8"/>
                    </Anchors>
                    <Color r="0" g="0" b="0" a="0.8"/>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture file="Interface\DialogFrame\UI-DialogBox-Header">
                    <Size x="320" y="64"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="12"/>
                    </Anchors>
                </Texture>
                <FontString name="$parentTitle" inherits="GameFontNormalLarge" text="Debug Log Viewer">
                    <Anchors>
                        <Anchor point="TOP" y="0"/>
                    </Anchors>
                    <Color r="1" g="0.82" b="0"/>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-5" y="-5"/>
                </Anchors>
            </Button>
            
            <ScrollFrame name="$parentLogScroll" inherits="UIPanelScrollFrameTemplate">
                <Size x="580" y="320"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="10" y="-40"/>
                </Anchors>
                <ScrollChild>
                    <EditBox name="$parentLogEditBox" multiLine="true" autoFocus="false">
                        <Size x="580" y="320"/>
                        <Anchors>
                            <Anchor point="TOPLEFT"/>
                        </Anchors>
                        <FontString inherits="GameFontHighlight"/>
                    </EditBox>
                </ScrollChild>
            </ScrollFrame>
            
            <Button name="$parentCopyButton" inherits="UIPanelButtonTemplate" text="Copy to Clipboard">
                <Size x="120" y="22"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="10" y="10"/>
                </Anchors>
            </Button>
            
            <Button name="$parentClearButton" inherits="UIPanelButtonTemplate" text="Clear Log">
                <Size x="100" y="22"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="140" y="10"/>
                </Anchors>
            </Button>
            
            <Button name="$parentRefreshButton" inherits="UIPanelButtonTemplate" text="Refresh">
                <Size x="80" y="22"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="250" y="10"/>
                </Anchors>
            </Button>
        </Frames>
        <Scripts>
            <OnMouseDown>
                self:StartMoving()
            </OnMouseDown>
            <OnMouseUp>
                self:StopMovingOrSizing()
            </OnMouseUp>
        </Scripts>
    </Frame>
</Ui>
